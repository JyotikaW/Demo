pipeline {
agent any
stages {
stage('Provision infrastructure') {
 steps {
   sh '/Customers/HSBC/terraform init'
   sh '/Customers/HSBC/terraform plan --var-file=hsbc.tfvars -out=plan'

 }
}
  stage('Approval') {
      steps {
        script {
          def userInput = input(id: 'confirm', message: 'Apply Terraform?', parameters: [ [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Apply terraform', name: 'confirm'] ])
        }
      }
    }
stage('TF Apply') {
      steps {
        
          sh '/Customers/HSBC/terraform apply plan'
        
      }
    }
}
}
 
