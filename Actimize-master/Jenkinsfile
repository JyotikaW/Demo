pipeline {
agent any
stages {
stage('Provision infrastructure') {
 steps {
   sh 'terraform init --var-file=hsbc.tfvars ./Actimize-master/Customers/HSBC'
   sh 'terraform plan --var-file=hsbc.tfvars -out=plan  ./Actimize-master/Customers/HSBC'

 }
}
  stage('Approval') {
      steps {
        script {
          def userInput = input(id: 'confirm', message: 'Apply Terraform?', parameters: [ [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Apply terraform', name: 'confirm'] ])
        }
      }
    }
stage('TF Apply') {
      steps {
        
          sh ' terraform apply --var-file=hsbc.tfvars   ./Actimize-master/Customers/HSBC'
        
      }
    }
}
}
 
